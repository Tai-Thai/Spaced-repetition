{
    "manifest_version": 3,
    "name": "Spaced repetition ex",
    "version": "1.1.0",
    "description": "Use spaced repetition method to learn vocabulary - update background file",
    "icons": {
        "16": "SR_logo.png",
        "32": "SR_logo.png",
        "48": "SR_logo.png",
        "128": "SR_logo.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting",
        "unlimitedStorage",
        "alarms",
        "notifications",
        "nativeMessaging"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "SR_logo.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "exclude_matches": ["http://localhost/*"],
            "js": ["main.js"],
            "type": "module",
            "run_at": "document_start",
            "css": ["main.css"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "externally_connectable": {
        "matches": ["*://*/*"]
    },
    "web_accessible_resources": [
        {
            "matches": ["*://*/*"],
            "resources": ["content.js"]
        }
    ]
}
